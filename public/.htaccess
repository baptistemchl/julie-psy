# =========================================
# .htaccess – julie-psy.fr (o2switch)
# SEO + perf + sécurité, sans casser Apache
# =========================================

# -----------------------------
# Réécritures et canonique
# -----------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Laisser passer les challenges Let's Encrypt
  RewriteRule ^\.well-known/acme-challenge/ - [L]

  # Rediriger /index.html -> /
  RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
  RewriteRule ^index\.html$ / [R=301,L]

  # Forcer HTTPS + www
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\.julie-psy\.fr$ [NC]
  RewriteRule ^ https://www.julie-psy.fr%{REQUEST_URI} [L,R=301]

  # Bloquer accès à certains dossiers (git, backups…)
  RewriteRule ^(?:\.git|\.svn|backup|backups|old)/ - [F,L]
</IfModule>

# -----------------------------
# Fichier par défaut + 404
# -----------------------------
DirectoryIndex index.html
ErrorDocument 404 /404.html

# Pas de listing de répertoire
Options -Indexes

# -----------------------------
# Sécurité : fichiers sensibles
# -----------------------------
<FilesMatch "(^\.|\.htaccess|\.htpasswd|\.env|\.ini|\.phps|\.log|composer\.(json|lock)|package(-lock)?\.json|yarn\.lock)$">
  Require all denied
</FilesMatch>

# -----------------------------
# Headers de sécurité
# -----------------------------
<IfModule mod_headers.c>
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "no-referrer-when-downgrade"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  # HSTS : activé car on force déjà le HTTPS
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# -----------------------------
# Cache navigateur (SEO / perf)
# -----------------------------
<IfModule mod_expires.c>
  ExpiresActive On

  # Assets statiques
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType image/* "access plus 1 year"
  ExpiresByType font/*  "access plus 1 year"

  # HTML : pas de cache long
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresDefault "access plus 1 day"
</IfModule>

# -----------------------------
# Compression GZIP
# (sans DeflateFilterNote qui casse sur o2switch)
# -----------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css
  AddOutputFilterByType DEFLATE text/javascript application/javascript
  AddOutputFilterByType DEFLATE application/json application/xml
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>
